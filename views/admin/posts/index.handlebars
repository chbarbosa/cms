
<h1>All Posts</h1>
<table class="table table-bodered">
    <thead>
        <tr>
            <th>Index</th>
            <th>File</th>
            <th>Title</th>
            <th>Status</th>
            <th>Allow Comments</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>{{id}}</td>
            <td><img height="50px" class="img-responsive" src="/uploads/{{file}}" alt=""></td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{allowComments}}</td>
            <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info" >Edit</a></td>
            <td>
                <form action="/admin/posts/{{id}}?_method=DELETE" method="POST">
                    <button type="submit" 
                    class="btn btn-danger" title="Click here to remove this post">DELETE</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>