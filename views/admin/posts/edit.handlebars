<h1>Edit Posts</h1>

<form action="/admin/posts/edit" method="POST">
<div class="form-group">
    <label for="title">Title</label>
    <input name="title" type="text" class="form-control" id="title" value="{{post.title}}">
</div>

<div class="form-group">
    <label for="status">Status</label>
    <select name="status" id="status" class="form-control">
        <option value="public">Public</option>
        <option value="private">Private</option>
        <option value="draft">Draft</option>
    </select>
</div>
{{#select}}{{/select}}
<div class="form-check">
    <label for="allowComments">
        <input name="allowComments" type="checkbox" class="form-check-input" 
            {{#if post.allowComments}} checked="checked" {{/if}}
            id="allowComments">
        Allow Comments
    </label>
</div>
<div class="form-group">
    <label for="body">Title</label>
    <textarea name="body" cols="30" rows="10" class="form-control" id="body">{{post.body}}</textarea>
</div>
<button type="submit" class="btn btn-primary">Submit</button>
</form>