<h1>Comments</h1>

<table class="table">
    <thead>
        <tr>
            <th>id</th>
            <th>owner</th>
            <th>date</th>
        </tr>
    </thead>
    <tbody>
        {{#each comments}}
        <tr>
            <td>{{id}}</td>            
            <td>{{user.firstName}}</td>
            <td>{{formatDate date 'MMMM Do YYYY'}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>