

<div class="row">
    <div class="col-sm-4">
        <h1>Create Category</h1>
        <form action="/admin/categories/create" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" placeholder="Enter title" class="form-control">
            </div>
            <button class="btn btn-primary">Create Category</button>
        </form>
    </div>
    <div class="col-sm-8">
        <h1>Categories</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbdoy>
                {{#each categories}}
                <tr>
                    <th>{{id}}</th>
                    <th>{{name}}</th>
                    <th><a href="/admin/categories/edit/{{id}}" class="btn btn-info">Edit</a></th>
                </tr>
                {{/each}}
            </tbdoy>
        </table>
    </div>
</div>